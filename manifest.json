{
  "manifest_version": 2,
  "name": "Bloqueur de réseaux sociaux",
  "version": "1.0",
  "description": "Bloque TikTok, X et Instagram et affiche un message démotivant",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png"
  }
}