{
  "manifest_version": 2,
  "name": "Bloqueur de réseaux sociaux",
  "version": "1.1",
  "description": "Bloque TikTok, X et Instagram et affiche un message démotivant",
  "permissions": ["webRequest", "webRequestBlocking", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "web_accessible_resources": ["blocked.html"]
}
